<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rankTextView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textColor="@color/colorPrimary"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/no_profile"
            android:id="@+id/userImageView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/rankTextView" android:layout_marginStart="48dp"/>
    <TextView
            android:text="Ibrahim Hussein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fullNameTextView" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/userImageView"
            android:layout_marginStart="32dp" android:textColor="@android:color/black" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ratingTextView" app:layout_constraintHorizontal_bias="0.15"/>
    <TextView
            android:text="2848685"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingTextView" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorPrimaryDark" android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>